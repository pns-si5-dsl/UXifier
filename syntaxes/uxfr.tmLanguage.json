{
    "name": "uxifier",
    "scopeName": "source.uxifier",
    "fileTypes": [".uxfr"],
    "patterns": [
        {
            "name": "comment.line.double-slash.uxfr",
            "begin": "\/\/",
            "end": "\n"
        },
        {
            "name": "comment.block.documentation.uxfr",
            "begin": "/[*]",
            "end": "[*]/",
            "contentName": "markup.italic.uxfr"
        },
        {
            "name": "string.quoted.single.uxfr",
            "begin": "'",
            "end": "'"
        },
        {
            "name": "string.quoted.double.uxfr",
            "begin": "\"",
            "end": "\""
        },
        {
            "name": "support.function.uxfr",
            "match": "[:]"
        },
        {
            "name": "support.variable.uxfr",
            "match": "(((?<=character: )|(?<=CheckField )|(?<=IntField )|(?<=StatField )|(?<=TextField )|(?<=SkillField )|(?<=config )|(?<=game )|(?<=page )|(?<=FieldGroup )|(?<=Button )|(?<=Text )|(?<=Image ))[\n\t\r ]*[^\n\t\n:({; ]+)"
        },
        {
            "name": "support.class.uxfr",
            "match": "(character|FieldGroup|CheckField|IntField|TextField|StatField|SkillField|config|game|page|Field|Button|Text|Image|area)"
        },
        {
            "name": "constant.language",
            "match": "(navigation|label|href|type|style|content|titlePos|color|title|source|legendPos|legend|width|height|direction|borderColor|borderSize|boxColor|textColor|shape|align|description|affect|maxLength|minLength|max|min|regex|selection)"
        },
        {
            "name": "entity.name.function.uxfr",
            "match": "(grid|skipable|linear|side_menu|bottom_menu|horizontal|vertical|primary|secondary|xxsmall|xsmall|small|medium|xxlarge|xlarge|large|auto|rectangular|circular|left|right|top|center|input|output)"
        },
        {
            "name": "entity.name.tag.uxfr",
            "match": "(bool|number|string)"
        },
        {
            "name": "constant.numeric.uxfr",
            "match": "((#[0-9a-f][0-9a-f][0-9a-f]([0-9a-f][0-9a-f][0-9a-f])?)|([0-9]px)|([0-9]%))"
        }
    ]
  }