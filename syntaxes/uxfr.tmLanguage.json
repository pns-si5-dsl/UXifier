{
    "name": "uxifier",
    "scopeName": "source.uxifier",
    "fileTypes": [".uxfr"],
    "patterns": [
        {
            "name": "comment.line.double-slash.uxfr",
            "begin": "\/\/",
            "end": "\n"
        },
        {
            "name": "comment.block.documentation.uxfr",
            "begin": "/[*]",
            "end": "[*]/",
            "contentName": "markup.italic.uxfr"
        },
        {
            "name": "string.quoted.single.uxfr",
            "begin": "'",
            "end": "'"
        },
        {
            "name": "string.quoted.double.uxfr",
            "begin": "\"",
            "end": "\""
        },
        {
            "name": "support.function.uxfr",
            "match": "[:]"
        },
        {
            "name": "entity.name.function.uxfr",
            "match": "(skipable|linear|side|bottom|horizontal|vertical)"
        },
        {
            "name": "entity.name.tag.uxfr",
            "match": "(bool|number|string)"
        },
        {
            "name": "support.variable.uxfr",
            "match": "(((?<=character: )|(?<=Field )|(?<=config )|(?<=game )|(?<=page )|(?<=FieldGroup )|(?<=Button )|(?<=Text )|(?<=Image ))[\n\t\r ]*[^\n\t\n:({; ]+)"
        },
        {
            "name": "support.class.uxfr",
            "match": "(character|Field |config |game |page |FieldGroup |Button |Text |Image )"
        },
        {
            "name": "constant.numeric.uxfr",
            "match": "#[0-9a-f][0-9a-f][0-9a-f]([0-9a-f][0-9a-f][0-9a-f])?"
        }
    ]
  }