{
  "name": "uxifier",
  "scopeName": "source.uxifier",
  "fileTypes": [
    ".uxfr"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.uxifier",
      "match": "\\b(bool|bottom|Button|character|config|Field|FieldGroup|game|horizontal|Image|linear|number|page|side|skipable|string|Text|vertical)\\b"
    },
    {
      "name": "keyword.symbol.uxifier",
      "match": "(\\,|\\;|\\:|\\(|\\)|\\{|\\})"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.uxifier",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.uxifier"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.uxifier"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.uxifier"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.uxifier"
        }
      ]
    }
  }
}