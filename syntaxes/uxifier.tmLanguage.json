{
  "name": "uxifier",
  "scopeName": "source.uxifier",
  "fileTypes": [
    ".uxfr"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.uxifier",
      "match": "\\b(affect|align|area|auto|borderColor|borderSize|bottom_menu|boxColor|Button|center|character|CheckField|circular|color|config|content|description|direction|FieldGroup|game|grid|height|horizontal|href|Image|IntField|large|left|linear|max|maxLength|medium|min|minLength|navigation|page|primary|rectangular|regex|right|secondary|selection|shape|side_menu|SkillField|skipable|small|source|StatField|style|Text|textColor|TextField|title|titlePos|top|type|vertical|width|xlarge|xsmall|xxlarge|xxsmall)\\b"
    },
    {
      "name": "keyword.symbol.uxifier",
      "match": "(\\,|\\;|\\:|\\[|\\]|\\{|\\}|\\=|\\|)"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.uxifier",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.uxifier"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.uxifier"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.uxifier"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.uxifier"
        }
      ]
    }
  }
}