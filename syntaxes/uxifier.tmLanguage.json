{
  "name": "uxifier",
  "scopeName": "source.uxifier",
  "fileTypes": [
    ".uxfr"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.uxifier",
      "match": "\\b(align|area|auto|bool|borderColor|borderSize|bottom_menu|boxColor|Button|center|character|circular|color|config|content|direction|Field|FieldGroup|game|grid|height|horizontal|href|Image|large|left|linear|medium|navigation|number|page|primary|rectangular|right|secondary|shape|side_menu|skipable|small|source|string|style|Text|textColor|title|titlePos|top|type|vertical|width|xlarge|xsmall|xxlarge|xxsmall)\\b"
    },
    {
      "name": "keyword.symbol.uxifier",
      "match": "(\\;|\\:|\\{|\\}|\\=|\\|)"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.uxifier",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.uxifier"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.uxifier"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.uxifier"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.uxifier"
        }
      ]
    }
  }
}