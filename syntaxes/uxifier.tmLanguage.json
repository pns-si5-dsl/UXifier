{
    "name": "uxifier",
    "scopeName": "source.uxifier",
    "fileTypes": [".uxfr", ".uxf"],
    "patterns": [
        {
            "include": "#comments"
        },
        {
            "name": "keyword.control.uxifier",
            "match": "\\b(affect|align|area|auto|borderColor|borderSize|bottom_menu|boxColor|BoxComponent|Button|center|charSheet|CheckField|circular|color|config|content|description|direction|false|FieldGroup|game|GaugeDecoration|height|highColor|horizontal|href|Image|initial|input|IntField|label|large|largeScreen|left|legend|legendPos|linear|ListComponent|lowColor|matchWindow|max|maxLength|medium|mediumScreen|min|minLength|navigation|output|page|primary|rectangular|regex|right|secondary|selection|shape|side_menu|SimpleDecoration|SkillField|small|smallScreen|source|stat|StatField|style|Text|textColor|TextField|title|titlePos|top|true|type|vertical|width|xlarge|xsmall|xxlarge|xxsmall)\\b"
        },
        {
            "name": "keyword.symbol.uxifier",
            "match": "(\\,|\\;|\\:|\\[|\\]|\\{|\\}|\\=|\\|)"
        }
    ],
    "repository": {
        "comments": {
            "patterns": [
                {
                    "name": "comment.block.uxifier",
                    "begin": "/\\*",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.definition.comment.uxifier"
                        }
                    },
                    "end": "\\*/",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.definition.comment.uxifier"
                        }
                    }
                },
                {
                    "begin": "//",
                    "beginCaptures": {
                        "1": {
                            "name": "punctuation.whitespace.comment.leading.uxifier"
                        }
                    },
                    "end": "(?=$)",
                    "name": "comment.line.uxifier"
                }
            ]
        }
    }
}
